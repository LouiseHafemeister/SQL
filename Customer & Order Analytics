/*#1 How many orders were placed in January? 9723*/
SELECT count(Quantity) FROM JanSales;

/*#2 How many of those orders were for an iPhone? 379*/
SELECT count(Quantity) FROM JanSales WHERE Product='iPhone';

/*#3 Select the customer account numbers for all the orders that were placed in February.*/
SELECT customers.acctnum FROM customers JOIN FebSales ON customers.order_id = FebSales.orderID;

/*#4 Which product was the cheapest one sold in January, and what was the price? AAA Batteries for 2.99*/
SELECT JanSales.Product, JanSales.price FROM JanSales ORDER BY price LIMIT 1;

/*#5 What is the total revenue for each product sold in January? (Revenue can be calculated using the number of products sold and the price of the products).*/
SELECT Product, SUM(Quantity)*price AS revenue FROM JanSales GROUP BY Product;

/*#6 Which products were sold in February at 548 Lincoln St, Seattle, WA 98101, how many of each were sold, and what was the total revenue?*/
SELECT Product, SUM(Quantity) AS total_quanitity, SUM(Quantity)*price AS revenue FROM FebSales WHERE location = '548 Lincoln St, Seattle, WA 98101'
GROUP BY product;

/*#7 How many customers ordered more than 2 products at a time in February, and what was the average amount spent for those customers?*/
SELECT count(distinct customers.acctnum), avg(FebSales.Quantity*FebSales.price) FROM FebSales LEFT JOIN customers 
ON FebSales.orderID = customers.order_id
WHERE FebSales.Quantity>2;
